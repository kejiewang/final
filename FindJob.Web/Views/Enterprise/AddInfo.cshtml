
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> 企业信息</h3>
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> 完善企业信息</h4>
                    <form class="form-horizontal style-form" action="/Enterprise/AddInfoSave" method="post" enctype="multipart/form-data">

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">企业名称</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Name" name="Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">电话</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Tel" name="Tel">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">地址</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Address" name="Address">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">资质认证</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control" id="Qualification" name="Qualification">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">企业简介</label>
                            <div class="col-sm-10">
                                @*<input type="text" class="form-control" id="Introduction" name="introduction">*@
                                <textarea name="Introduction" id="Introduction" cols="100" rows="10" warp="virtual"></textarea>
                            </div>
                        </div>


                        <div class="form-group">

                            <div class="col-sm-10">

                                <input type="submit" name="Save" value="提交 " class="btn btn-primary btn-lg" />
                            </div>
                        </div>
                    </form>
                </div>
            </div><!-- col-lg-12-->
        </div>
        <!-- /row -->

    </section>
</section>