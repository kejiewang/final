
@{
    ViewBag.Title = "Index";
    FindJob.Model.T_Base_Student stu = ViewBag.stu;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> 学生</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="content-panel">
                    @*<h4><i class="fa fa-angle-right"></i>学生 </h4>*@
                    <a href="UpdateInfo"><input type="submit" name="Save" value="编辑 " class="btn btn-primary btn-sm"/></a>
                    <section id="unseen">
                        <!--学生基本信息-->
                        <!--第一行-->
                        <div class="row mt">
                            <div class="col-lg-12">
                                <div class="form-panel">
                                    <h4 class="mb"><i class="fa fa-angle-right"></i> 基本信息</h4>
                                    <form class="form-inline" role="form">

                                        <div class="form-group">
                                            姓名：<label class="sr-only" for="exampleInputEmail2"></label>
                                            <input type="text" class="form-control" id="exampleInputEmail2" placeholder=@stu.Name readonly="readonly">
                                        </div>

                                        <div class="form-group">
                                            <label class="sr-only" for="exampleInputPassword2"></label>
                                            性别：
                                            <input type="text" class="form-control" id="exampleInputPassword2" placeholder=@stu.Gender readonly="readonly">
                                        </div>

                                        <div class="form-group">
                                            <label class="sr-only" for="exampleInputPassword2"></label>
                                            联系方式：
                                            <input type="text" class="form-control" id="exampleInputPassword2" placeholder=@stu.Phone readonly="readonly">
                                        </div>

                                        <div class="form-group">
                                            <label class="sr-only" for="exampleInputPassword2"></label>
                                            身份证：
                                            <input type="text" class="form-control" id="exampleInputPassword2" placeholder=@stu.IdCard readonly="readonly">
                                        </div>

                                    </form>
                                </div><!-- /form-panel -->
                            </div><!-- /col-lg-12 -->
                        </div>

                        <!--第二行-->
                        <div class="row mt">
                            <div class="col-lg-12">
                                <div class="form-panel">
                                    <h4 class="mb"><i class="fa fa-angle-right"></i> 学校信息</h4>
                                    <form class="form-inline" role="form">

                                        <div class="form-group">
                                            学校名称：<label class="sr-only" for="exampleInputEmail2"></label>
                                            <input type="text" class="form-control" id="exampleInputEmail2" placeholder=@stu.School readonly="readonly">
                                        </div>

                                        <div class="form-group">
                                            <label class="sr-only" for="exampleInputPassword2"></label>
                                            专业名称：
                                            <input type="text" class="form-control" id="exampleInputPassword2" placeholder=@stu.Major readonly="readonly">
                                        </div>

                                        <div class="form-group">
                                            <label class="sr-only" for="exampleInputPassword2"></label>
                                            班级名称：
                                            <input type="text" class="form-control" id="exampleInputPassword2" placeholder=@stu.Class readonly="readonly">
                                        </div>

                                        <div class="form-group">
                                            <label class="sr-only" for="exampleInputPassword2"></label>
                                            毕业证明：
                                            <a href="@stu.GraduateProve">点击查看</a>
                                            @*<input type="text" class="form-control" id="exampleInputPassword2" readonly="readonly" placeholder=@stu.GraduateProve >*@
                                        </div>

                                    </form>
                                </div><!-- /form-panel -->
                            </div><!-- /col-lg-12 -->
                        </div>

                        <!--第三行-->
                        <div class="row mt">
                            <div class="col-lg-12">
                                <div class="form-panel">
                                    <h4 class="mb"><i class="fa fa-angle-right"></i> 个人意愿</h4>
                                    <form class="form-inline" role="form">

                                        <div class="form-group">
                                            意向工作：<label class="sr-only" for="exampleInputEmail2"></label>
                                            <input type="text" class="form-control" id="exampleInputEmail2" placeholder=@stu.IntentJob readonly="readonly">
                                        </div>

                                        <div class="form-group">
                                            <label class="sr-only" for="exampleInputPassword2"></label>
                                            意向薪资：
                                            <input type="text" class="form-control" id="exampleInputPassword2" readonly="readonly" placeholder=@stu.IntentSalary>
                                        </div>

                                        <div class="form-group">
                                            <label class="sr-only" for="exampleInputPassword2"></label>
                                            意向工作地：
                                            <input type="text" class="form-control" id="exampleInputPassword2" readonly="readonly" placeholder=@stu.IntentPlace>
                                        </div>



                                    </form>
                                </div><!-- /form-panel -->
                            </div><!-- /col-lg-12 -->
                        </div>

                        <!--第四行-->
                        <div class="row mt">
                            <div class="col-lg-12">
                                <div class="form-panel">
                                    <h4 class="mb"><i class="fa fa-angle-right"></i> 个人经历</h4>
                                    <form class="form-inline" role="form">


                                        <textarea name="Experience" id="Experience" cols="100" rows="10" warp="virtual" readonly="readonly">@stu.Experience</textarea>


                                    </form>
                                </div><!-- /form-panel -->
                            </div><!-- /col-lg-12 -->
                        </div>
                    </section>
                </div><!-- /content-panel -->
            </div><!-- /col-lg-4 -->
        </div><!-- /row -->
    </section>
</section>

