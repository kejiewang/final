
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
    FindJob.Model.T_Base_Job job = ViewBag.job;
}

<section id="main-content">
    <section class="wrapper">

        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i>修改职位</h4>
                    <form action="/job/updatesave" class="form-horizontal style-form" method="post">

                        <input type="hidden" id="Id" name="Id" value=@job.Id />
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">职位名</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="JobName" name="JobName" value=@job.JobName />
                            </div>
                        </div>                      
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">备注</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Memo" name="Memo" value=@job.Memo />
                            </div>
                        </div>


                        <input type="submit" name="Save" value="提交 " />
                    </form>
                </div>
            </div><!-- col-lg-12-->
        </div><!-- /row -->

    </section>
</section>

