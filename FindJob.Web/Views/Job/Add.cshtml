
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<section id="main-content">

    <section class="wrapper">
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i>增加职位</h4>
                    <form action="/Job/AddSave" class="form-horizontal style-form" method="post">


                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">职位名</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="JobName" name="JobName" />
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">备注</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Memo" name="Memo" />
                            </div>
                        </div>


                        <input type="submit" name="Save" value="保存 " />
                    </form>
                </div>
            </div><!-- col-lg-12-->
        </div><!-- /row -->

    </section>

</section>